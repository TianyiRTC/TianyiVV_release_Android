<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true" android:background="@drawable/circle"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="230dp"
            android:layout_height="230dp" android:background="@drawable/circle" android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call_video_default_avatar" android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>