<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_yishitong_item_sel"
    android:paddingBottom="6.0dp"
    android:paddingLeft="14.0dp"
    android:paddingRight="14.0dp"
    android:paddingTop="6.0dp" >

    <ImageView
        android:id="@+id/group_call_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_call_out_success" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dp"
        android:layout_toLeftOf="@+id/group_call_tv_run_time"
        android:layout_toRightOf="@+id/group_call_result" >

        <RelativeLayout
            android:id="@+id/group_call_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/group_call_date"
                style="@style/setting_itmes_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/group_call_time"
                style="@style/setting_itmes_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dp"
                android:layout_toRightOf="@+id/group_call_date" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_call_date_time" >

            <ImageView
                android:id="@+id/group_call_type_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/group_call_type_tv"
                style="@style/setting_itmes_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dp"
                android:layout_toRightOf="@+id/group_call_type_img" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/group_call_tv_run_time"
        style="@style/setting_itmes_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>